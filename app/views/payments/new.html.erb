<div class="col-lg-4" id="order">
  <div class="order-summary">

     <div class="Header2">
      <h3 class="">Order Summary</h3>
    </div>

      <div>
        <p class="dark no-margin"><i class="fa-solid fa-bag-shopping" style="margin-right: 5px"></i><strong>Items: </strong><%= @order.products.size %></p>
      </div>

      <div>
        <p class="dark no-margin"><i class="fa-solid fa-leaf" style="margin-right: 5px"></i><strong>Carbon Footprint saved: </strong><%= @order.products.map {|product| product.CO2e}.sum.round(2) %> CO2e / kg</p>
        <br>
        <p class="dark no-margin"><i class="fa-solid fa-circle-info" style="margin-right: 5px"></i><strong>For more information, visit: </strong></p>
        <%= link_to ("https://tinyurl.com/2kjcjw9y"), target: "_blank" do %>
          <%= image_tag "Nature.png", height: 50, width: 150, class: "mb-2" %>
        <% end %>
      </div>

      <!-- If the current user is an Association, the goods are for free -->
    <%if current_user.category == "Association"%>
      <h5 class="mt-4 confirm-order-title">Please confirm your order,<br>the goods are for free</h5>
    <%= link_to "Confirm Order", order_path(@order), class: "btn btn-primary", id:"pay" %>
    <% else %>

        <strong class="cart-amount"><i class="fa-solid fa-file-invoice" style="margin-right: 5px"></i>Total Amount: <%= humanized_money_with_symbol @order.amount %></strong></p>
        <button id="pay" class="btn btn-primary">Confirm Order</button>

        <script src="https://js.stripe.com/v3/"></script>
        <script>
          const paymentButton = document.getElementById('pay');
          paymentButton.addEventListener('click', () => {
            const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
            stripe.redirectToCheckout({
              sessionId: '<%= @order.checkout_session_id %>'
            });
          });
        </script>
      <% end %>
    <% end %>

  </div>
