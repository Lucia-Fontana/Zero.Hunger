<div class="container d-flex justify-content-center align-items-center">
  <div class="col-12 col-md-9 col-lg-7 col-xl-6">
    <div class="card" style="border-radius: 15px;">
      <div class="card-body p-5">

        <%= image_tag "signup-icon.png", class: "signup" %>
        <h2 class="header-signup">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

          <div class="form-inputs">

            <%= f.input :email,
                        required: true,
                        autofocus: true, label: false,
                        placeholder: "Enter your email",
                        input_html: { autocomplete: "email" }%>

            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>

            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>

            <%= f.input :username,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "username" }%>

            <%= f.input :category,
                        collection: [ "Private person", "Association" ],
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "category" }%>

            <div class="form-actions">
              <%= f.button :submit, "Register now" %>
            </div>

            <%= render "devise/shared/links" %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
