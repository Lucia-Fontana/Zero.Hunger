<div class="container contform img-back-signup">
  <div class="col-12 col-lg-5">
    <div class="card-form">
      <div class="card-body p-5">

        <h4 class="header-signup">Sign up</h4>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

          <div class="form-inputs">

          <%= f.input :username,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: "Choose your username",
                        input_html: { autocomplete: "username" }%>

            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: "Enter your email",
                        input_html: { autocomplete: "email" }%>

            <%= f.input :password,
                        required: true,
                        label: false,
                        placeholder: "Enter your password",
                        # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>

            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        placeholder: "Confirm your password",
                        input_html: { autocomplete: "new-password" } %>

            <%= f.input :category,
                        collection: [ "Private person", "Association", "Retailer" ],
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: "Please select your category",
                        input_html: { autocomplete: "category" }%>

            <div class="form-actions">
              <%= f.button :submit, "Register now", id: "buy-button", class: "btn btn-gradient show-button" %>
            </div>

            <div class="div-login">
              <p class="dark header-signup">Already have an account?</p>
              <%= render "devise/shared/links" %>
            </div>

          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-5">
  </div>
</div>
