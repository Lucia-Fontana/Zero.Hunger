<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "new-logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav me-auto">

        <% if user_signed_in? %>

          <li class="nav-item-links">
            <% if current_user.category == "Retailer" %>
              <li class="nav-item active">
                <%= link_to new_product_path do %>
                  <%= image_tag "plus.png", class: "nav-link" %>
                <% end %>
              </li>
            <% end %>

          <% unless current_user.orders.last.nil?%>
            <li class="nav-item active">
              <%= link_to new_order_payment_path(current_user.orders.last) do %>
                <%= image_tag "shopping-cart.png", class: "nav-link" %>
              <% end %>
            </li>
            <% else %>
            <li class="nav-item active">
              <%= link_to root_path do %>
                <%= image_tag "icons8-shopping-cart-48 (1).png", class: "nav-link" %>
              <% end %>
            </li>
          <% end %>

          <li class="nav-item active">
            <%= link_to orders_path, class: "navbar-link", id: "my-orders" do %>
              <%= image_tag "history.png" %>
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "navbar-link", id: "log-out" do %>
              <%= image_tag "log-out.png" %>
            <% end %>
          </li>
        </li>

        <% else %>

          <li class="nav-item-home">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>

        <% end %>
      </ul>

    </div>

  </div>

</div>
