                  <%= image_tag "green-plus.png", class: "nav-link" %>
                <% end %>
              </li>
            <% end %>

          <% unless current_user.orders.last.nil?%>
            <li class="nav-item active">
              <%= link_to new_order_payment_path(current_user.orders.last) do %>
                <%= image_tag "green-cart.png", class: "nav-link" %>
              <% end %>
