<div class="container">
  <div class="second-container">
    <div class="confirmation-top">
      <div class="confirmation-top-titles">
        <h3>Thank you <%= @user.username %> !</h3>
        <h3>Your purchases are waiting for you ! &#127881;</h3>
      </div>
      <div class="confirmation-top-back">
        <%= link_to products_path do %>
          <h3><i class="fa-solid fa-check"></i></h3>
        <% end %>
      </div>
    </div>
    <div class="order-infos">
      <p>Order confirmation n°<%= @order.id %></p>
      <% if current_user.category == "Association" %>
        <p>Total price: 0 <%= @order.amount.symbol %></p>
      <% else %>
        <p>Total price: <%= @order.amount.fractional / 100 %> <%= @order.amount.symbol %></p>
      <% end %>
      <% unless @locations[0].nil? %>
        <div class="purchase">
          <div class="purchase-summary">
            <div class="purchase-img-container">
              <%= image_tag "map-icon.png", class: "purchase-img" %>
            </div>
            <div class="purchase-location-text">
              <h4><%= Business.where(address: @address1).first.name %></h4>
              <h5><%= @address1 %></h5>
            </div>
          </div>
          <div class="purchase-summary">
            <div class="purchase-img-container">
              <%= image_tag "success-icon.png", class: "purchase-img" %>
            </div>
            <div class="purchase-summary-text">
              <% @address1_articles.each do |article| %>
                <% if current_user.category == "Association" %>
                  <p><%= article.product.name %> : <span class="crossed-out"><%= article.product.price %> €</span></p>
                <% else %>
                  <p><%= article.product.name %> : <span><%= article.product.price %> €</span></p>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
